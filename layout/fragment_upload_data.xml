<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context=".UploadData">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_bright"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_blue_bright"
                android:text="Upload The Image Of The House\n"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imgHouse"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/holo_blue_bright"
                android:text="Upload The Image Of The Room"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imgRoom"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="100dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/holo_blue_bright"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/holo_blue_bright"
                    android:text="Type Of Room"
                    android:textColor="@android:color/black" />

                <Spinner
                    android:id="@+id/spTypeOFRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>

            </LinearLayout>

            <TextView
                android:id="@+id/txtSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="10dp"
                android:text="Please select Room Type"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/txtNoBed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Select Number Of Bed In a Room : "
                android:textColor="@android:color/black" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGrp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radbtn2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="2"
                    />
                <TextView
                    android:layout_width="5dp"
                    android:layout_height="1dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radbtn3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="3"
                    />
                <TextView
                    android:layout_width="5dp"
                    android:layout_height="1dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radbtn4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="4"
                    />
                <TextView
                    android:layout_width="5dp"
                    android:layout_height="1dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radbtnMore"
                    android:text="4+"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />


            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Room Location"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edtState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Enter State..." />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter District..."
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/edtDistrict"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Locality..."
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/edtLocality"
                />

            <EditText
                android:id="@+id/edtPincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Pincode..."
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="number" />

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_green_light"
                android:text="Upload" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
